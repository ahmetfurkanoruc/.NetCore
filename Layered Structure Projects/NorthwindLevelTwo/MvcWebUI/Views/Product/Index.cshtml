@model ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Product List</h1>
<a href="/product/add" class="btn btn-success">Add Product</a>

<table class="table table-bordered">
    @foreach (var product in Model.Products)
    {

        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>@product.QuantityPerUnit</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a href="/product/update?productId=@product.ProductId" class="alert-warning">Update</a></td>
            <td><a href="/product/delete?productId=@product.ProductId" class="alert-danger">Delete</a></td>
            <td><a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add Cart</a></td>
        </tr>
    }

</table>



